.signup-container.inner-container.small-container
  #signup-form
    .title-page
      .circle
        i.icon-user
      h1= t('Signup with email')
    form.form(action='/signup', method="post", role="form", autovalidate='autovalidate', autosubmit='autosubmit')
      - if (reference)
        input(type='hidden', name='reference', value=reference)
      ul.form-errors
      .form-group
        label= t('Email')
        input.form-control(type='email', name='email', tabindex=1, placeholder=t('example@email.com'), validate='required email')
      .form-group
        label #{t('Your firstname')}
        input.form-control(type='text', id='firstName', name='firstName', tabindex=2, placeholder=t('Firstname'), validate='required firstname')
      .form-group
        label #{t('Your lastname')}
        input.form-control(type='text', id='lastName', name='lastName', tabindex=3, placeholder=t('Lastname'), validate='required lastname')
      .form-group
         label #{t('Career')}
         select.form-control(type='text', name='careerChoice', id='careerChoice', tabindex=4)
            option(value='') --Selecciona tu carrera--
            option(value='Sistemas') Sistemas
            option(value='Electrónica') Electrónica
            option(value='Química') Química
            option(value='Industrial') Industrial
            option(value='Mecánica') Mecánica
            option(value='Textil') Textil
            option(value='Naval') Naval
      .form-group
         label #{t('Career Condition')}
         select.form-control(type='text', name='careerCondition', id='careerCondition', tabindex=5)
            option(value='') --Selecciona tu condición de carrera--
            option(value='Estudiante') Estudiante
            option(value='Graduado') Graduado
            option(value='Docente') Docente
      .form-group
        label= t('Password')
        input.form-control(type='password', name='password', tabindex=6, placeholder=t('Password'), validate='required min-length:6')
      .form-group
        label= t('Re-type password')
        input.form-control(type='password', name='re_password', tabindex=7, placeholder=t('Repeat Password'), validate='required same:password')
      .form-group: button.btn.btn-success.btn-block.btn-lg(tabindex=8)=t('Signup now!')
      .form-group
        - var tos = config['tos'];
        - var pp = config['pp'];
        - if (tos || pp)
          p.help-block.text-center=t('By signing up you are accepting our')
          ul.text-center
            - if (pp)
              li: a(href='/help/terms-of-service', target='_blank')=t('help.tos.title')
            - if (tos)
              li: a(href='/help/privacy-policy', target='_blank')=t('help.pp.title')
  #signup-message.hide
    h1 Welcome
    p.lead.text-muted #{t('Your sign up data was received. We sent you an email so you can validate your email address.')}.
    p.lead.text-muted= t('Please check your email (remember to check your spam folder too) and click on the link supplied on the email.')
    a(href='/signup/resend-validation-email')= t('Resend validation email')
